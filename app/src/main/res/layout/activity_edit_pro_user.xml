<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".activity.EditProUserActivity">
    <include layout="@layout/include_top_toolbar_iv"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:id="@+id/ll_user_avatar"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_marginStart="9dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="userAvtar"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_gravity="center_vertical"
            android:src="@drawable/circle_place"
             />
        <ImageView
            android:layout_marginStart="14dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_next_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        layout="@layout/include_line"/>
    <LinearLayout

        android:background="@color/white"
        android:id="@+id/ll_user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginStart="9dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="userName"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_user_name"
            android:textAlignment="textEnd"
            android:paddingEnd="10dp"
            android:textSize="15sp"
            android:textColorHint="#C7C7CE"
            android:background="@null"
            android:gravity="end"
            tools:text="111"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:hint="fill in username"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_next_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        layout="@layout/include_line"/>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/ll_gender"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginStart="9dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Gender"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_gender"
            android:textAlignment="textEnd"
            android:paddingEnd="10dp"
            android:textSize="15sp"
            android:textColorHint="#C7C7CE"
            android:background="@null"
            android:gravity="end"
            tools:text="111"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:hint="fill in username"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_next_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        layout="@layout/include_line"/>
    <LinearLayout
        android:background="@color/white"
    android:id="@+id/ll_birthdate"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:layout_marginStart="9dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="birthdate"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_phone_num"
        android:textAlignment="textEnd"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        android:textColorHint="#C7C7CE"
        android:background="@null"
        android:gravity="end"
        tools:text="111"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical"
        android:hint="fill in username"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_next_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
 
    <TextView
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_rec_purple_r1"
        android:text="@string/confirm"
        android:layout_width="315dp"
        android:layout_height="50dp" />


</LinearLayout>