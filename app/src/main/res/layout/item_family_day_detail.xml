<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_anchor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="小乔呀"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:padding="8dp"
        android:text="35:45:23"
        app:layout_constraintBottom_toBottomOf="@+id/tv_anchor_name"
        app:layout_constraintStart_toEndOf="@+id/tv_anchor_name"
        app:layout_constraintTop_toTopOf="@+id/tv_anchor_name"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/tv_anchor_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        android:text="35"
        app:layout_constraintBottom_toBottomOf="@+id/tv_anchor_name"
        app:layout_constraintStart_toEndOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/tv_anchor_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_family_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        android:text="35"
        app:layout_constraintBottom_toBottomOf="@+id/tv_anchor_name"
        app:layout_constraintStart_toEndOf="@+id/tv_anchor_income"
        app:layout_constraintTop_toTopOf="@+id/tv_anchor_name"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>