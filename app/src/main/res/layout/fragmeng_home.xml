<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="23dp">

        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            android:gravity="bottom"
            android:text="Hot"
            android:textColor="@color/black"
            android:textSize="26sp"
            app:layout_constraintBottom_toTopOf="@+id/iv_hot"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_marginBottom="6dp"
            android:id="@+id/iv_hot"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="12dp"
            android:layout_height="4dp"
            android:src="@drawable/bg_rec_colorful_r2"
            app:layout_constraintEnd_toEndOf="@id/tv_hot"
            app:layout_constraintStart_toStartOf="@+id/tv_hot"
            />

        <TextView
            android:id="@+id/tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:gravity="center"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:text="New"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/iv_new"
            app:layout_constraintStart_toEndOf="@id/tv_hot"

            app:layout_goneMarginStart="18dp"/>

        <ImageView
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="6dp"
            android:id="@+id/iv_new"
            android:layout_width="12dp"
            android:layout_height="4dp"
            android:src="@drawable/bg_rec_colorful_r2"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@id/tv_new"
            app:layout_constraintStart_toStartOf="@+id/tv_new"
            tools:visibility="visible"/>

    </android.support.constraint.ConstraintLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl"/>


</android.support.constraint.ConstraintLayout>