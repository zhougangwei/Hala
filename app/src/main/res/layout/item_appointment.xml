<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:background="@color/white">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/iv_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_head_place" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#EAEAEA"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="唐诗"
        android:textColor="#676767"
        app:layout_constraintStart_toEndOf="@id/iv_head"
        app:layout_constraintTop_toTopOf="@id/iv_head" />



    <ImageView
        android:id="@+id/iv_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_rec_green_r5"
        android:layout_width="105dp"
        android:layout_height="49dp" />
    <TextView

        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginEnd="13dp"
        android:text="Feb4"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
       app:layout_constraintEnd_toStartOf="@+id/tv_hour"
        android:id="@+id/tv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="12sp"
        android:id="@+id/tv_hour"
        android:textColor="@color/white"
        android:layout_marginEnd="13dp"
        android:text="20:58"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_marginTop="1dp"
        android:textSize="13sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/tv_week"
        app:layout_constraintTop_toBottomOf="@+id/tv_hour"
        android:text="INPROCESS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>