<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"

    android:background="@drawable/bg_invite_anchor_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="家族邀请码"
        android:textColor="#FF363636"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="#FFFE3A6D"
        android:textColor="#FFFE3A6D"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/textView20"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_margin="13dp"
        app:layout_constraintStart_toStartOf="@+id/tv_code"
        android:layout_height="wrap_content"
        android:text="注：每个邀请码只能使用1次，使用后自 动失效。"
        app:layout_constraintEnd_toEndOf="@+id/tv_code"
        app:layout_constraintTop_toBottomOf="@+id/tv_code" />
</android.support.constraint.ConstraintLayout>