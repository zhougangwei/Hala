<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="@color/white"
                                             android:layout_height="match_parent"
                                             tools:context="chat.hala.hala.activity.LoginActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="109dp"
        android:text="@string/login_regist_more_fun"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="109dp"/>

    <TextView
        android:id="@id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="登录注册表示同意"
        app:layout_constraintStart_toStartOf="@id/tv1"
        app:layout_constraintTop_toBottomOf="@id/tv1"/>
    <TextView
        android:id="@+id/tv_private_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户协议、隐私条款"
        android:textColor="#FF5782B2"
        app:layout_constraintStart_toEndOf="@id/tv2"
        app:layout_constraintTop_toTopOf="@id/tv2"/>


    <TextView
        android:drawablePadding="6dp"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginTop="73dp"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:text="+86"
        android:id="@+id/tv_choose_country"
        app:layout_constraintStart_toStartOf="@id/tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@id/iv_line"
        android:textColor="#FF333333"
        android:id="@+id/et_phone_num"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/tv_choose_country"
        android:textSize="16sp"
        android:textColorHint="#FFBDBDBD"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="@id/tv_choose_country"
        app:layout_constraintStart_toEndOf="@id/tv_choose_country"
        android:hint="@string/input_phone_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_line"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/et_phone_num"
        android:src="#FFE0E1E0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:id="@+id/tv_get_sms"
        android:textColor="@color/white"
        android:background="@drawable/selector_get_sms"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_line"
        android:gravity="center"
        android:text="@string/get_sms_code"
        app:layout_constraintEnd_toEndOf="@id/iv_line"
        app:layout_constraintStart_toStartOf="@id/iv_line"
        android:layout_width="0dp"
        android:layout_height="45dp"/>

    <ImageView
        android:src="#FFDEDFDE"
        app:layout_constraintEnd_toStartOf="@id/tv5"
        app:layout_constraintTop_toTopOf="@id/tv5"
        app:layout_constraintBottom_toBottomOf="@id/tv5"
        app:layout_constraintStart_toStartOf="@id/iv_line"
        android:layout_width="0dp"
        android:layout_height="1dp"/>
    <ImageView
        android:src="#FFDEDFDE"
        app:layout_constraintEnd_toEndOf="@id/iv_line"
        app:layout_constraintStart_toEndOf="@id/tv5"
        app:layout_constraintTop_toTopOf="@id/tv5"
        app:layout_constraintBottom_toBottomOf="@id/tv5"
        android:layout_width="0dp"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv5"
        android:layout_marginBottom="17dp"
       app:layout_constraintBottom_toTopOf="@id/tv_wechat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/other_login_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="5dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_wechat"
        android:id="@+id/tv_wechat"
        android:layout_marginBottom="59dp"
        android:layout_marginStart="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_qq"
        android:padding="5dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_qq"
        app:layout_constraintTop_toTopOf="@id/tv_wechat"
        android:layout_marginEnd="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>