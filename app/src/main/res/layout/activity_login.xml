<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">


    <ImageView
        android:id="@+id/iv_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="59dp"
            android:src="@drawable/ic_big_head"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="110dp"
        android:id="@+id/ll_face_login"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/iv_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="245dp"
        android:background="@drawable/bg_rec_grey_r3"
        android:layout_height="39dp">
        <ImageView
            android:layout_marginStart="19dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:layout_marginStart="28dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_with_facebook"
            />

    </LinearLayout>

    <LinearLayout
android:id="@+id/ll_phone"
android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_face_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="245dp"
        android:background="@drawable/bg_rec_grey_r3"
        android:layout_height="39dp">
        <ImageView
            android:layout_marginStart="19dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:layout_marginStart="28dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_in_with_phone"
            />

    </LinearLayout>

    <CheckBox
        android:layout_marginBottom="40dp"
        android:layout_marginStart="26dp"
        android:id="@+id/cb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:id="@+id/tv_policy"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@+id/cb"
        app:layout_constraintBottom_toBottomOf="@+id/cb"
        app:layout_constraintStart_toEndOf="@id/cb"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="34dp"
        android:text="By clicking Sign up, you are indicating that you have read and agreed to the"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />



</android.support.constraint.ConstraintLayout>