<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="62dp"
    android:id="@+id/cl_item"
    android:layout_marginTop="26dp"
    android:background="@drawable/bg_item_charge"
    android:paddingStart="24dp"
    android:paddingTop="10dp"
    android:paddingEnd="24dp">


    <TextView
        android:id="@+id/tv_money_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥90"
        android:includeFontPadding="false"
        android:textColor="#FF898989"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_coin_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_coins"
        android:text="1200币"
        android:textColor="#FF898989"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_money_cost" />

</android.support.constraint.ConstraintLayout>