<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5F7"
    tools:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bkg_familyset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_family_manager_top"
        android:orientation="vertical"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="60dp"
                android:layout_height="60dp"

                tools:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/iv_head"
                android:text="清风爱上你"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_head"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="7dp"
                android:layout_toEndOf="@+id/iv_head"
                android:text="ID:3445454"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_alignBottom="@+id/tv_id"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_invite_anchor"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="邀请主播"
                android:textColor="@color/white" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="主播数量"
                android:textColor="#FF363636" />

            <TextView
                android:id="@+id/tv_anchor_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="10人" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="累计时长"
                android:textColor="#FF363636" />

            <TextView
                android:id="@+id/tv_family_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="187小时56分钟23秒" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="直播收益"
                android:textColor="#FF363636" />

            <TextView
                android:id="@+id/tv_anchor_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1.53亿豆" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="家族提成"
                android:textColor="#FF363636" />

            <TextView
                android:id="@+id/tv_family_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="2000万豆" />
        </LinearLayout>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_family_manager_top"
        android:padding="17dp"
        app:layout_constraintEnd_toEndOf="@id/ll"
        app:layout_constraintStart_toStartOf="@id/ll"
        app:layout_constraintTop_toBottomOf="@+id/ll">

        <ImageView
            android:id="@+id/iv_choose_time"
            app:layout_constraintTop_toTopOf="@id/tv_start_time"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_choose_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-08-22"
            android:textColor="#FF363636"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至"
            android:textColor="#FF363636"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tv_start_time"
            app:layout_constraintTop_toTopOf="@+id/tv_start_time" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-08-22"
            android:textColor="#FF363636"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@+id/tv_start_time" />

        <TextView
            android:id="@+id/tv_during_open_anchor_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="开播人数：35"
            android:textColor="#FF818181"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@id/tv_during_open_anchor_total_time"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/tv_start_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_start_time" />

        <TextView
            android:id="@+id/tv_during_open_anchor_total_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="累计时长：35"
            android:textColor="#FF818181"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/tv_during_open_anchor_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_start_time" />

        <TextView
            android:id="@+id/tv_during_anchor_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="主播收益：345.24万"
            android:textColor="#FF818181"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@id/tv_during_family_income"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/tv_start_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_during_open_anchor_num" />

        <TextView
            android:id="@+id/tv_during_family_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="家族收益：87.03万"
            android:textColor="#FF818181"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/tv_during_anchor_income"
            app:layout_constraintTop_toTopOf="@id/tv_during_anchor_income" />



        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="每日明细"
            android:textColor="#FF363636"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_start_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_during_family_income" />

        <ImageView
            android:id="@+id/tv_today_more"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            app:layout_constraintTop_toTopOf="@id/tv2"
            app:layout_constraintEnd_toEndOf="@id/iv_choose_time"
            android:src="@drawable/ic_next_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_today_open_anchor_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="开播人数：35"
            android:textColor="#FF818181"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@id/tv_today_open_anchor_total_time"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/tv_start_time"
            app:layout_constraintTop_toBottomOf="@+id/tv2" />

        <TextView
            android:id="@+id/tv_today_open_anchor_total_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="累计时长：35"
            android:textColor="#FF818181"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/tv_today_open_anchor_num"
            app:layout_constraintTop_toBottomOf="@+id/tv2" />

        <TextView
            android:id="@+id/tv_today_anchor_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="主播收益：345.24万"
            android:textColor="#FF818181"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@id/tv_today_family_income"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/tv_start_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_today_open_anchor_num" />

        <TextView
            android:id="@+id/tv_today_family_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="家族收益：87.03万"
            android:textColor="#FF818181"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/tv_today_anchor_income"
            app:layout_constraintTop_toTopOf="@id/tv_today_anchor_income" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>